package ClassesThatNest;

public class Computer {

	private int numberOfHauptspeicher = 0;
	String hersteller = "HP";
	Hauptspeicher hauptspeicher = new Hauptspeicher();

	public class Hauptspeicher {

		private int hsNumber;
		int groesse = 1024;

		Hauptspeicher() {
			Computer.this.numberOfHauptspeicher++; // Computer.this ist implicit also ist es nicht notvendig es zu schreiben
			hsNumber =numberOfHauptspeicher;
		}

		void printHersteller() {
			System.out.println(Computer.this.hersteller);
		}

		void printHsNumber() {
			System.out.println(hsNumber);
		}
	}
}
